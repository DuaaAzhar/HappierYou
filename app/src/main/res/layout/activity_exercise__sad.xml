<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Anger"
    android:background="@drawable/bgimg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Deal With Your Depression with Some Healthy exercises"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="#00796B"
                    android:textSize="30sp"
                    android:text="1.Set Off That Runner's High"></TextView>
                <ImageView
                    android:id="@+id/ivMusic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/runner">
                </ImageView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="#009688"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:text="If you’ve ever completed a long run and felt like you could keep going a few more miles, you may have experienced a runner’s high.

This sense of euphoria helps athletes feel relaxed and calm. It can also help shield against pain from the long bout of exercise, at least temporarily.

But not everyone who runs or exercises will feel this brief moment of bliss."></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="#00796B"
                    android:textSize="30sp"
                    android:text="2. Build Your Muscles"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivMusi"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/build_muscles">
                    </ImageView>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:background="#009688"
                        android:textSize="20sp"
                        android:text="Boost your strength, boost your happiness? A recent study of 45 stroke survivors with depression found that a 10-week strength training program helped reduced symptoms of depression (among numerous other benefits).\n
It requires full attention and concentration. More importantly, people can see the results, the outline of the muscles forming, from dedication and training.”
\nJust be sure to start slowly and use the assistance of a personal trainer if needed."></TextView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="#00796B"
                    android:textSize="30sp"
                    android:text="3. Become a Yogi"></TextView>
                <ImageView
                    android:id="@+id/ivCamelPose"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/yogi">
                </ImageView>
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:background="#009688"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:text=" in a study of 65 women with depression and anxiety, the 34 women who took a yoga class twice a week for two months showed a significant decrease in depression and anxiety symptoms, compared to the 31 women who were not in the class.">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="#00796B"
                    android:textSize="30sp"
                    android:text="4. Try Tai Chi"></TextView>
                <ImageView
                    android:id="@+id/ivGoddessPose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tai_chi">
                </ImageView>
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:background="#009688"
                    android:textSize="17sp"
                    android:text="Like yoga, the slow, gentle movements of tai chi are another Eastern tradition that might help you break free from depression or major depressive disorder.\n
The researchers theorized that the social aspects of tai chi, which is done in group settings, may have also played a role in its effectiveness.">

                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="#00796B"
                    android:textSize="30sp"
                    android:text="5.Get Your Walk On"></TextView>
                <ImageView
                    android:id="@+id/ivCorpsePose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/walk">
                </ImageView>
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:background="#009688"
                    android:textSize="17sp"
                    android:text="Simply putting one foot in front of the other may be the trick to feeling better — that’s because walking is an aerobic exercise that’s suited for almost everyone. All it takes is a pair of comfortable, supportive shoes, and you’re ready to go.">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>